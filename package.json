{
  "name": "@amzn/truexkeplerrefapp",
  "version": "0.2.2",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf buildinfo.json dist build",
    "start": "npx react-native start",
    "update-version": "sed -e 's/^version =.*$/version = \"'$npm_package_version'\"/' -i '' manifest.toml",
    "lint": "eslint src --ext .ts,.tsx",
    "compile": "tsc -p tsconfig.json",
    "link-tar": "npm link @truex/ad-renderer-kepler",

    "build": "run-s update-version compile",
    "build:release": "npm run build && react-native build-kepler --build-type Release",
    "build:debug": "npm run build && react-native build-kepler --build-type Debug",
    "build:app": "npm-run-all build:release build:debug",
    "release": "npm-run-all lint test build build:app",

    "kepler-simulator-debug": "kepler run-kepler build/vega-tv2023-aarch64-debug/truexkeplerrefapp_aarch64.vpkg com.truex.keplerrefapp.main -s",
    "kepler-simulator-release": "kepler run-kepler build/vega-tv2023-aarch64-release/truexkeplerrefapp_aarch64.vpkg com.truex.keplerrefapp.main -s",
    "kepler-simulator-start": "kepler device simulator start",
    "kepler-fast-refresh": "kepler device start-port-forwarding --device Simulator -p 8081 --forward false",

    "kepler-log": "kepler device start-log-stream",
    "kepler-log-stop": "kepler device stop-log-stream",

    "__comment__": "For installing on the actual kepler stick:",
    "kepler-device-debug": "run-s kepler-push-debug kepler-stop-app kepler-install kepler-start-app",
    "kepler-device-release": "run-s kepler-push-release kepler-stop-app kepler-install kepler-start-app",
    "kepler-push-debug": "vda push build/vega-tv2023-armv7-debug/truexkeplerrefapp_armv7.vpkg /tmp",
    "kepler-push-release": "vda push build/vega-tv2023-armv7-release/truexkeplerrefapp_armv7.vpkg /tmp",
    "kepler-install": "vda shell vpm install /tmp/truexkeplerrefapp_armv7.vpkg",
    "kepler-start-app": "kepler device launch-app -a com.truex.keplerrefapp.main",
    "kepler-stop-app": "kepler device terminate-app -a com.truex.keplerrefapp.main"
  },
  "dependencies": {
    "@amzn/react-native-kepler": "~2.0.0",
    "react": "18.2.0",
    "react-native": "0.72.0",
    "react-native-uuid": "~2.0.2",

    "react-native-gesture-handler": "latest",

    "@amzn/react-native-w3cmedia": "latest",
    "@amzn/react-native-device-info": "latest",

    "@amzn/keplerscript-react-native-reanimated": "~2.0.0",
    "@amzn/react-native-safe-area-context": "~2.0.0",
    "@amzn/react-navigation__routers": "~2.0.0",
    "@amzn/react-navigation__core": "~2.0.0",
    "@amzn/react-navigation__native": "~2.0.0",
    "@amzn/react-navigation__stack": "~2.0.0",
    "@amzn/react-navigation__drawer": "~2.0.0",
    "@amzn/react-native-screens": "~2.0.0",

    "@amzn/webview": "file:webview-3.1.0_0.18.tgz"
  },
  "devDependencies": {
    "@amzn/kepler-cli-platform": "^0",
    "@react-native/eslint-config": "0.72.2",
    "@react-native/metro-config": "^0.72.6",
    "@react-native-community/cli": "11.3.2",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^28.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "babel-jest": "^28.0.0",
    "eslint": "^8.12.0",
    "jest": "^28.0.0",
    "metro-react-native-babel-preset": "^0.76.5",
    "mustache": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^28.0.0",
    "typescript": "4.8.4"
  },
  "kepler": {
    "projectType": "application",
    "appName": "TruexKeplerRefApp",
    "targets": ["tv"],
    "api": 0.1
  }
}
